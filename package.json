{
    "name": "@feature/toggle",
    "version": "0.0.1",
    "description": "A feature toggle library",
    "author": "Rodrigo Pinheiro de Almeida <rpinheiroalmeida@gmail.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "keywords": [
        "Toggle",
        "Feature Toggle"
    ],
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rimraf dist",
        "lint": "eslint ./src/**/*.ts ./test/**/*.spec.ts",
        "lint:fix": "eslint --fix ./src/**/*.ts ./test/**/*.spec.ts -t verbose",
        "postversion": "git push origin master",
        "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
        "test": "npm run test:unit && npm run test:integration",
        "test:integration": "echo no integration tests to execute",
        "test:unit": "cross-env NODE_ENV=test jest --config ./test/jest.config-unit.js --coverage",
        "test:mutation": "stryker run ./test/stryker.conf.js",
        "stryker:init": "stryker init",
        "tsc": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rpinheiroalmeida/typescript-toggle"
    },
    "bugs": {
        "url": "https://github.com/rpinheiroalmeida/typescript-toggle/issues"
    },
    "directories": {
        "lib": "dist"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "engineStrict": true,
    "devDependencies": {
        "@stryker-mutator/core": "^3.1.0",
        "@stryker-mutator/html-reporter": "^3.1.0",
        "@stryker-mutator/jest-runner": "^3.1.0",
        "@stryker-mutator/typescript": "^3.1.0",
        "@types/jest": "^25.2.1",
        "@types/joi": "^13.6.3",
        "@types/lodash": "^4.14.150",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "cross-env": "^5.2.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jsdoc": "^24.0.6",
        "eslint-plugin-prefer-arrow": "^1.2.1",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.4.0",
        "prettier": "^2.0.5",
        "rimraf": "^2.7.1",
        "source-map-support": "^0.5.19",
        "test-wait": "^1.1.3",
        "ts-jest": "^25.4.0",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "lodash": "^4.17.15"
    },
    "publishConfig": {
        "access": "public"
    }
}
